def get_lexicon_prompt() -> str:
    """Returns a formatted string for injection into AI system prompts."""
    prompt = "CANONICAL TERMINOLOGY (FORCED TRANSLATION):\n"
    for en, cn in CANONICAL_TERMINOLOGY.items():
        prompt += f"- {en} -> {cn}\n"
    return prompt
